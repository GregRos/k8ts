{
  "name": "@k8ts/workspace",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/metadata",
    "packages/k8ts",
    "packages/instruments"
  ],
  "scripts": {
    "shx": "^0.3.4",
    "build": "tsc -b .",
    "build:clean": "run-s clean build",
    "test": "yarn workspaces foreach -Ap --topological-dev run test",
    "watch": "tsc -b . -w",
    "clean": "yarn workspaces foreach -Ap run clean",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint:check": "eslint '**/*.ts'",
    "eslint:fix": "eslint --fix '**/*.ts'",
    "lint:check": "run-s prettier:check",
    "lint:fix": "run-s prettier:fix",
    "tidy": "yarn install && run-s lint:fix build:clean test"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@typescript/analyze-trace": "^0.10.1",
    "doddle": "^5.0.0-beta.16",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-packagejson": "2.5.0",
    "process-tracing": "^1.0.2",
    "shelljs": "0.8.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "packageManager": "yarn@4.7.0",
  "sourcesRoot": "src"
}
