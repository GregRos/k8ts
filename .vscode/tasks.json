{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc-watch"],
      "option": "watch",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "label": "tsc: watch - tsconfig.json"
    },

    {
      "command": "yarn",
      "args": ["tidy"],
      "type": "shell",
      "label": "yarn tidy",
      "problemMatcher": []
    }
  ]
}
