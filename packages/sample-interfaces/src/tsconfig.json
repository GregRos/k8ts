{
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "declarationMap": true,
    "sourceMap": true,
    "tsBuildInfoFile": "../dist/.tsbuildinfo",
    "rootDir": ".",
    "noEmit": false,
    "declaration": true,
    "outDir": "../dist",
    "isolatedModules": true,
    "strict": false
  },
  "include": ["**/*.ts"],
  "exclude": ["**/node_modules"]
}
