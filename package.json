{
  "name": "@k8ts/workspace",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "shx": "^0.3.4",
    "build": "tsc -b .",
    "build:native": "tsgo -b .",
    "build:clean": "run-s clean build",
    "test": "yarn workspaces foreach -Ap --topological-dev run test",
    "watch": "tsc -b . -w",
    "clean": "yarn workspaces foreach -Ap run clean",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "eslint:check": "eslint '**/*.ts'",
    "eslint:fix": "eslint --fix '**/*.ts'",
    "lint:check": "run-s prettier:check",
    "lint:fix": "run-s prettier:fix",
    "install:all": "yarn install && yarn workspaces foreach -Ap exec yarn install",
    "tidy": "run-s install:all lint:fix build:clean test"
  },
  "dependencies": {
    "@types/node": "^25.0.2",
    "what-are-you": "^0.2.0",
    "yamprint": "^0.8.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@typescript/analyze-trace": "^0.10.1",
    "doddle": "^7.2.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-markdown": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "prettier-plugin-jsdoc": "^1.3.0",
    "prettier-plugin-organize-imports": "3.2.4",
    "prettier-plugin-packagejson": "2.5.0",
    "process-tracing": "^1.0.2",
    "shelljs": "0.8.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "packageManager": "yarn@4.12.0",
  "sourcesRoot": "src"
}
