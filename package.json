{
  "name": "k8ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sourcesRoot": "src",
  "types": "dist/index",
  "description": "TypeScript framework for building k8s manifests",
  "version": "0.1.0",
  "main": "dist/index.js",
  "repository": "github:gregros/k8ts",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -b .",
    "clean": "shx rm -rf dist",
    "rebuild": "run-s clean build",
    "prepare": "husky install",
    "watch": "tsc -b . --watch",
    "lint:fix": "prettier --write src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint --fix src/**/*.{ts,mts,cts,js,mjs,cjs} ",
    "lint:check": "prettier --check src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css} && eslint src/**/*.{ts,mts,cts,js,mjs,cjs}",
    "test": "jest --coverage"
  },
  "keywords": [
    "typescript",
    "kubernetes",
    "k8s",
    "manifests"
  ],
  "author": "GregRos",
  "license": "MIT",
  "lint-staged": {
    "*.{ts,mts,cts,js,mjs,cjs}": "node_modules/.bin/eslint --cache --fix",
    "src/**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,ctsx,mtsx,html,htm,yaml,yml,json,scss,css}": "node_modules/.bin/prettier --write"
  },
  "packageManager": "yarn@4.7.0",
  "devDependencies": {
    "@gregros/eslint-config": "^0.7.1",
    "@swc/core": "^1.11.5",
    "@swc/jest": "^0.2.37",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.8",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^8",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.2",
    "prettier-plugin-jsdoc": "^1.3.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.9",
    "shx": "^0.3.4",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
